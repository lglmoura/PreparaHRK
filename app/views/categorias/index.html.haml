%h1 Listing categorias

%table
  %thead
    %tr
      %th Nome
      %th Pai
      %th
      %th
      %th

  %tbody
    - @categorias.each do |categoria|
      %tr
        %td= categoria.nome
        %td= categoria.pai.nome if !categoria.pai.nil?
        %td= link_to 'Show', categoria
        %td= link_to 'Edit', edit_categoria_path(categoria)
        %td= link_to 'Destroy', categoria, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Categoria', new_categoria_path
